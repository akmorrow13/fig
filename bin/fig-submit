# Figure out where FIG is installed
FIG_REPO="$(cd `dirname $0`/..; pwd)"

CLASSPATH=$("$FIG_REPO"/bin/compute-fig-classpath.sh)
FIG_JARS=$("$FIG_REPO"/bin/compute-fig-jars.sh)

# Find the FIG CLI jar
num_versions=$(ls "$FIG_REPO"/target/appassembler/repo/net/fnothaft/fig | wc -l)
if [ "$num_versions" -eq "0" ]; then
  echo "Failed to find fig jar in $FIG_REPO/target/appassembler/repo/net/fnothaft/fig"
  echo "You need to build fig before running this program."
  exit 1
fi
if [ "$num_versions" -gt "1" ]; then
  versions_list=$(ls "$FIG_REPO"/target/appassembler/repo/net/fnothaft/fig)
  echo "Found multiple fig versions in $FIG_REPO/target/appassembler/repo/net/fnothaft/fig:"
  echo "$versions_list"
  echo "Please remove all but one."
  exit 1
fi
FIG_CLI_JAR=$(ls "$FIG_REPO"/target/appassembler/repo/net/fnothaft/fig/*/fig-*.jar)

if [ -z "$SPARK_HOME" ]; then
  echo "Attempting to use 'spark-submit' on default path; you might need to set SPARK_HOME"
  SPARK_SUBMIT=spark-submit
else
  SPARK_SUBMIT="$SPARK_HOME"/bin/spark-submit
fi

# submit the job to Spark
"$SPARK_SUBMIT" \
  --class net.fnothaft.fig.Fig \
  --conf spark.serializer=org.apache.spark.serializer.KryoSerializer \
  --conf spark.kryo.registrator=net.fnothaft.fig.FigKryoRegistrator \
  --conf spark.kryoserializer.buffer.mb=4 \
  --conf spark.kryo.referenceTracking=true \
  --conf spark.io.compression.codec=org.bdgenomics.utils.serialization.compression.GzipCompressionCodec \
  --conf spark.executor.memory=${FIG_EXECUTOR_MEMORY:-55g} \
  ${FIG_OPTS:- } \
  --driver-memory ${FIG_DRIVER_MEMORY:-55g} \
  --jars "$FIG_JARS" \
  "$FIG_CLI_JAR" \
  "$@"
